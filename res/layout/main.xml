<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
 <TextView
 android:id="@+id/loc"
 android:text="Friend/Family Member is currently at:"
 android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
    <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
 

 <TextView
 android:id="@+id/latLabel"
 android:text="Latidude:"
 android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
 <TextView
 android:id="@+id/latVal"
 android:text=""
 android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
 
 </LinearLayout>   
     <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
 <TextView
 android:id="@+id/lngLabel"
 android:text="Longitude:"
 android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
 <TextView
 android:id="@+id/lngVal"
 android:text=""
 android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
 
 </LinearLayout>
     <com.google.android.maps.MapView
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:apiKey="0brrkSIGaorrLqJameb3igl52ikIqbCH4ElPTAw"
  android:id="@+id/mv"
  android:clickable="true">
     </com.google.android.maps.MapView>
            
</LinearLayout>
